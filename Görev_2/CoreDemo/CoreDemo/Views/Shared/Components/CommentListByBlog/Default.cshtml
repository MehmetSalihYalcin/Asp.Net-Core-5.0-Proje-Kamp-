@model IEnumerable<EntityLayer.Concrate.Comment>
<div class="comment-top">
	<h4>Yorumlar</h4>
	@{


		if (ViewBag.myid == 0)
		{
			<h4>Bu Blogta Henüz Yorum Yapılmadı İlk Yorumu Siz Yapın</h4>
		}
		else
		{
			foreach (var item in Model)
			{
				<div class="media">
					<img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
					<div class="media-body">
						<h5 class="mt-0">@item.Comment_UserName</h5>
						<p>
							@item.Comment_Content
						</p>
					</div>
				</div>
			}
		}

	}
</div>