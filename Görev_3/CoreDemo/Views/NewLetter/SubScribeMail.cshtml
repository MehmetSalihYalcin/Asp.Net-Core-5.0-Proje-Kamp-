
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>


<div class="tech-btm">
	<img src="~/CoreBlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
</div>
<div class="tech-btm">
	<h4>Mail Bülteni . Abone Olun</h4>
	<p>Teknoloji , yazılım ve diyer bloglar ...</p>
    <form id="my-form" method="post">
        <input type="email" placeholder="Email" id="txtMail" required="" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
	</form>

</div>


<script>
    $(function () {
        $("#my-form").on("submit", function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.ajax({
                url: "/NewLetter/SubScribeMail/",
                type: "POST",
                data: formData,
                success: function (response) {
                    swal({
                        title: "TEBRİKLER!",
                        text: "Başarılı Bir Şekilde Ücretsiz Abone olundu .!",
                        icon: "success",
                        button: "Tamam!",
                    });
                    location.reload();
                },
                error: function (xhr) {
                    // Sunucudan gelen yanıt hatalı olduğunda yapılacak işlemler
                }
            });
        });
    });
</script>