@using EntityLayer.Concrate
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Son 10 Blog Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Resim </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@counter</td>
                                <td>
                                    <img src="@item.Blog_Image" class="mr-2" alt="image"> 
                                </td>
                                <td>@item.Blog_Title</td>
                                <td>
                                        <label class="badge badge-gradient-success">@item.Category.Category_Name </label>
                                </td>
                                    <td> @(((DateTime)item.Blog_CreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td> <a href="/Blog/BlogReadAll/@item.Blog_ID" class="btn-sm btn-dark">Detaylar</a> </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>