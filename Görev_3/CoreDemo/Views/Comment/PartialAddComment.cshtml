
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>


<div class="comment-top">
	<h4>Yorum Ekle</h4>
	<div class="comment-bottom">
        <form id="my-form" method="post">
			<input class="form-control" type="text" name="Comment_UserName" placeholder="Ad Soyad" required="">
			<input class="form-control" type="text" name="Comment_Title" placeholder="Konu" required="">

			<textarea class="form-control" name="Comment_Content" placeholder="Yorumunuz..." required=""></textarea>
			<button type="submit" class="btn btn-primary submit">Gönder</button>
		</form>
	</div>
</div>
<script>
    $(function () {
        $("#my-form").on("submit", function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.ajax({
                url: "/Comment/PartialAddComment/",
                type: "POST",
                data: formData,
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                    // Sunucudan gelen yanıt hatalı olduğunda yapılacak işlemler
                }
            });
        });
    });
</script>