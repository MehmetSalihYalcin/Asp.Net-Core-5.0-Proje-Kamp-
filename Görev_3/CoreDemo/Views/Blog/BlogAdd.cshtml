                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" name="Blog_Image">
                    @Html.ValidationMessageFor(x => x.Blog_Image)
                </div>
                <div class="form-group">
                    <label>Blog Küçük Görsel</label>
